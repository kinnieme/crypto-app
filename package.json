{
  "name": "zyrix-crypto-exchange",
  "version": "1.0.0",
  "description": "A cryptocurrency exchange application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "both": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "postinstall": "npm run install-client",
    "info": "echo Zyrix Crypto Exchange - Server running on http://localhost:5000 && echo Client app runs on http://localhost:3000 when started separately && echo API available at http://localhost:5000/api/time",
    "security-audit": "npm audit",
    "security-fix": "npm audit fix"
  },
  "keywords": [
    "cryptocurrency",
    "exchange",
    "react",
    "express",
    "postgresql"
  ],
  "author": "Zyrix Development Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^3.0.1",
    "helmet": "^7.2.0",
    "mysql": "^2.18.1",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2",
    "winston": "^3.19.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.22"
  }
}
